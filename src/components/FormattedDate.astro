---
interface Props {
  date: string | Date;
}

const { date } = Astro.props;

let dateObj: Date;
if (date instanceof Date) {
  dateObj = date;
} else {
  dateObj = new Date(date);
}
---

<time datetime={dateObj.toISOString()}>
  {dateObj.toLocaleDateString("en-us", {
    year: "numeric",
    month: "short",
    day: "numeric",
  })}
</time>
