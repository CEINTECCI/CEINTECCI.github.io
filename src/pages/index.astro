---
import Base from "@layouts/Base.astro";

const categories = [
  { name: "Laboratorios", slug: "Laboratorio", image: "/Laboratorios.webp" },
  // { name: "Investigaciones", slug: "investigaciones", image: "/investigaciones.webp" },
  // { name: "Productos", slug: "Productos", image: "/Productos.webp" },
  { name: "Convocatorias", slug: "Convocatorias", image: "/convocatoria.webp" },
  // { name: "Sprint Days", slug: "Sprint Days", image: "/sprintDays.webp" },
  { name: "OpenLabs", slug: "OpenLAB", image: "/OpenLabs.webp" }
];
---

<Base>
  <section class="container mx-auto py-12 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category) => (
        <a href={`/categories/${category.slug}/`} class="group block">
          <div class="relative h-72 overflow-hidden rounded-xl shadow-lg transition-all duration-300 group-hover:shadow-xl">
            <!-- Imagen -->
            <div class="absolute inset-0 w-full h-full">
              <img
                src={category.image}
                alt={category.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-80 transition-opacity duration-300 group-hover:opacity-50"></div>
            </div>

            <!-- Texto -->
            <div class="absolute inset-0 flex items-center justify-center p-6">
              <div class="relative transform transition-transform duration-300 group-hover:scale-105">
                <h2 class="!text-white text-3xl font-extrabold tracking-wide text-center drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)]">
                  {category.name}
                </h2>
                <div class="h-1 w-0 bg-white mx-auto mt-2 rounded-full transition-all duration-300 group-hover:w-2/3"></div>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>
